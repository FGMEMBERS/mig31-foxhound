<?xml version="1.0"?>
<PropertyList>

 <path>adi.ac</path>

 <animation>
  <type>select</type>
  <object-name>off-flag</object-name>
  <condition>
   <equals>
    <property type="bool">systems/attitude-indicator</property>
    <value>false</value>
   </equals>
  </condition>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>sphere</object-name>
  <property>orientation/roll-deg</property>
  <center>
   <x-m>-0.0291</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>sphere</object-name>
  <property>orientation/pitch-deg</property>
  <center>
   <x-m>-0.0291</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>turn-indicator</object-name>
  <property>/instrumentation/turn-indicator/indicated-turn-rate</property>
  <!-- midle: ~ 1,3 G turn, full 2 G turn at mach 0.8 ??? -->
  <factor>0.0073</factor>
  <min>-0.0111</min>
  <max>0.0111</max>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

