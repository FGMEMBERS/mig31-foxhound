 <!-- slip-ball-->
 <animation>
  <type>rotate</type>
  <object-name>slip-ball</object-name>
  <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
  <factor>2</factor>
  <min-deg>-2</min-deg>
  <max-deg>2l</max-deg>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0.18</z-m> 
  </center>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

